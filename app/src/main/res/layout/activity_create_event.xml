<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.virginiatech.piraj.hokievent.CreateEventActivity">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- HokiEvent name -->

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@string/eventName">
                </TextView>


                <EditText
                    android:id="@+id/createEventName"
                    style="@style/TextfieldBaseStyle"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:lines="1"/>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/tableLayout">


                    <!-- Date and time -->

                    <TableRow>
                        <TextView
                            android:text="@string/startDate"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_weight="1"/>

                        <TextView
                            android:text="@string/endDate"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"

                            android:layout_weight="1"/>
                    </TableRow>

                    <TableRow>
                        <!-- TODO Use DatePicker and TimePicker? -->
                        <EditText
                            android:id="@+id/startDate"
                            style="@style/TextfieldBaseStyle"
                            android:layout_weight="1"
                            android:layout_marginRight="10dp"
                            android:inputType="date" />

                        <EditText
                            android:id="@+id/endDate"
                            style="@style/TextfieldBaseStyle"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:inputType="date" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:text="@string/startTime"
                            android:layout_weight="1"/>

                        <TextView
                            android:text="@string/endTime"
                            android:layout_weight="1"/>
                    </TableRow>

                    <TableRow>
                        <EditText
                            android:id="@+id/startTime"
                            style="@style/TextfieldBaseStyle"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:inputType="time" />

                        <EditText
                            android:id="@+id/endTime"
                            style="@style/TextfieldBaseStyle"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:inputType="time" />

                    </TableRow>

                </TableLayout>


                <!-- Location -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/location" />

                <!-- TODO How to input this? -->
                <!-- Solution: https://developers.google.com/places/android-api/autocomplete -->

                <EditText
                    android:id="@+id/createEventLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextfieldBaseStyle"/>

                <!-- Description -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description"/>

                <EditText
                    android:id="@+id/createEventDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextfieldBaseStyle"
                    android:scrollbars="vertical"/>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/createEventTagsButton"
                        android:text="@string/createEventEnterTags"
                        style="@style/ButtonBaseStyle"
                        android:background="@drawable/pill_button_bg"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"/>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_height="60dp"
                        android:layout_width="match_parent"
                        android:id="@+id/tagsList"
                        android:layout_weight="2"/>
                </LinearLayout>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_height="20dp"
                    android:layout_width="match_parent"
                    android:id="@+id/createEventMessage"
                    android:textAlignment="center"/>

                <!-- Done button -->

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/createEventCancelButton"
                        style="@style/ButtonBaseStyle"
                        android:text="@string/createEventCancelButton"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="10dp"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/createEventNextButton"
                        style="@style/ButtonBaseStyle"
                        android:text="@string/createEventNextButton"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="10dp"
                        android:layout_weight="1"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
