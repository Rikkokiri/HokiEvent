<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.virginiatech.piraj.hokievent.CreateEventActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="2"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/tableLayout">

            <!-- Event name -->

            <TableRow>
                <TextView
                    android:text="@string/eventName">
                </TextView>
            </TableRow>

            <TableRow>
                <EditText
                    android:id="@+id/eventName"
                    style="@style/TextfieldBaseStyle"
                    android:layout_weight="1"/>
            </TableRow>

            <!-- Date and time -->

            <TableRow>
                <TextView
                    android:text="@string/startDate"
                    android:layout_weight="1"/>

                <TextView
                    android:text="@string/endDate"
                    android:layout_weight="1"/>
            </TableRow>

            <TableRow>
                <!-- TODO Use DatePicker and TimePicker? -->
                <EditText
                    android:id="@+id/startDate"
                    style="@style/TextfieldBaseStyle"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:inputType="date" />

                <EditText
                    android:id="@+id/endDate"
                    style="@style/TextfieldBaseStyle"
                    android:layout_weight="1"
                    android:inputType="date" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="@string/startTime"
                    android:layout_weight="1"/>

                <TextView
                    android:text="@string/endTime"
                    android:layout_weight="1"/>
            </TableRow>

            <TableRow>
                <EditText
                    android:id="@+id/startTime"
                    style="@style/TextfieldBaseStyle"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:inputType="time" />

                <EditText
                    android:id="@+id/endTime"
                    style="@style/TextfieldBaseStyle"
                    android:layout_weight="1"
                    android:inputType="time" />

            </TableRow>

        </TableLayout>


        <!-- Location -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location" />

        <!-- TODO How to input this? -->
        <EditText
            android:id="@+id/eventLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextfieldBaseStyle"/>

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description"/>

        <EditText
            android:id="@+id/eventDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextfieldBaseStyle"
            android:lines="3"
            android:scrollbars="vertical"/>

        <!-- Tags -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tags"
            />

        <!-- TODO: How to input these? -->
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextfieldBaseStyle"/>

        <!-- Done button -->
        <Button
            android:id="@+id/eventDoneButton"
            style="@style/ButtonBaseStyle"
            android:text="@string/eventDoneButton"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</RelativeLayout>
