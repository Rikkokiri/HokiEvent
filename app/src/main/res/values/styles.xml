<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base for button styles -->
    <style name="ButtonBaseStyle">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16dp</item> <!-- TODO Adjust -->
        <item name="android:textAllCaps">false</item>
        <!-- Background shape -->
        <item name="android:background">@drawable/basic_button_bg</item>
        <item name="android:layout_height">50dp</item> --> <!-- TODO Adjust -->
        <item name="android:layout_width">160dp</item> <!-- TODO Adjust -->
    </style>

    <!-- Base style for text fields (EditText) -->
    <style name="TextfieldBaseStyle">
        <item name="android:background">@drawable/texfield_bg</item>
        <!-- Margin & padding -->
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">7dp</item>

    </style>

    <!-- Unified style for text labels in log in screen -->
    <style name="LoginText">
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item> <!-- TODO Adjust -->
    </style>

    <!-- <> <> <> <> Styles for event details <> <> <> <> -->

    <!-- Titles in EventDetails view -->
    <style name="EventDetailsTitles">
        <item name="android:textSize">22dp</item> <!-- TODO Adjust -->
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">5dp</item>

    </style>

    <!-- Event time, address etc. in EventDetails view -->
    <style name="EventDetailsItems">
        <item name="android:textSize">16dp</item> <!-- TODO Adjust -->
        <item name="android:padding">2dp</item>
    </style>

    <!-- Interest toggle button style -->
    <style name="InterestToggleButton">
        <item name="android:layout_margin">3dp</item>
    </style>

</resources>
